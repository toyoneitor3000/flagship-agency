generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Changelog {
  id               String    @id @default(cuid())
  title            String
  description      String
  version          String?
  type             String    @default("UPDATE")
  isPublished      Boolean   @default(false)
  publishedAt      DateTime?
  technicalDetails String?
  githubCommitHash String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([isPublished])
  @@index([publishedAt])
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  budget    String?
  createdAt DateTime @default(now())
}

model DemoRequest {
  id        String   @id @default(uuid())
  name      String
  whatsapp  String
  instagram String?
  industry  String
  status    String   @default("pending")
  notes     String?
  source    String   @default("landing")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  message   String?

  @@index([status])
  @@index([createdAt])
}

model Project {
  id           String           @id @default(uuid())
  userId       String
  name         String
  slug         String           @unique
  status       String           @default("DRAFT")
  architecture String
  integrations String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions     ProjectVersion[]
}

model ProjectVersion {
  id           String   @id @default(uuid())
  projectId    String
  name         String
  description  String?
  architecture String
  createdAt    DateTime @default(now())
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  role          String         @default("user")
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  fluidConfig   String?
  fluidPresets  String?
  accounts      Account[]
  domains       Domain[]
  notifications Notification[]
  projects      Project[]
  creativeTasks CreativeTask[]
  sessions      Session[]
  subscription  Subscription?
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Domain {
  id        String   @id @default(cuid())
  name      String   @unique
  status    String   @default("PENDING")
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id        String   @id @default(cuid())
  plan      String   @default("FREE")
  status    String   @default("ACTIVE")
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Analytics {
  id               String   @id @default(cuid())
  eventType        String
  projectId        String?
  userId           String?
  path             String?
  userAgent        String?
  ipHash           String?
  referer          String?
  country          String?
  responseTime     Int?
  bytesTransferred Int      @default(0)
  createdAt        DateTime @default(now())

  @@index([projectId])
  @@index([userId])
  @@index([createdAt])
  @@index([eventType])
}

model UsageStats {
  id              String   @id @default(cuid())
  userId          String   @unique
  totalPageViews  Int      @default(0)
  uniqueVisitors  Int      @default(0)
  totalBandwidth  BigInt   @default(0)
  totalApiCalls   Int      @default(0)
  avgResponseTime Int      @default(0)
  storageUsed     BigInt   @default(0)
  periodStart     DateTime @default(now())
  lastUpdated     DateTime @updatedAt

  @@index([userId])
}

model ColorPalette {
  id         String   @id @default(cuid())
  name       String   @unique
  slug       String   @unique
  primary    String
  secondary  String
  accent     String
  background String
  category   String?
  isActive   Boolean  @default(true)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model LayoutOption {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  config      String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SectionTemplate {
  id             String   @id @default(cuid())
  name           String   @unique
  slug           String   @unique
  description    String?
  icon           String?
  schema         String?
  defaultContent String?
  category       String?
  isActive       Boolean  @default(true)
  isPremium      Boolean  @default(false)
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model VisualEffect {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  type        String   @default("OVERLAY")
  cssClass    String?
  config      String?
  isActive    Boolean  @default(true)
  isPremium   Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GenerativePattern {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  generator   String
  preview     String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FontPairing {
  id          String   @id @default(cuid())
  name        String   @unique
  displayFont String
  bodyFont    String
  tracking    Float    @default(0)
  leading     Float    @default(1.0)
  category    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Archetype {
  id               String   @id @default(cuid())
  name             String   @unique
  slug             String   @unique
  label            String
  description      String?
  icon             String?
  color            String
  defaultPaletteId String?
  defaultLayoutId  String?
  isActive         Boolean  @default(true)
  sortOrder        Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   @default("INFO")
  link      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}



model CreativeTask {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, DONE, REJECTED
  priority    String   @default("NORMAL")  // NORMAL, HIGH, URGENT
  type        String   @default("DESIGN")  // DESIGN, MOTION, STRATEGY, OTHER
  attachments String?  // JSON stringified list of links
  delivery    String?  // JSON stringified delivery assets
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}
